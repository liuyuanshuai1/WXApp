<!--logs.wxml-->
<navigation-bar title="操作日志" back="{{true}}" color="black" background="#FFF"></navigation-bar>
<view class="logs-container">
  <view class="logs-header">
    <text class="header-title">用户操作日志</text>
    <text class="log-count">共 {{logs.length}} 条记录</text>
  </view>
  
  <scroll-view class="logs-scroll" scroll-y>
    <view class="logs-list">
      <block wx:for="{{logs}}" wx:key="id">
        <view class="log-item">
          <view class="log-header">
            <text class="log-title">{{item.title}}</text>
            <text class="log-date">{{item.date}}</text>
          </view>
          <view class="log-content">
            <text>{{item.content}}</text>
          </view>
          <view class="log-footer">
            <text class="log-type {{item.type}}">{{item.typeText}}</text>
          </view>
        </view>
      </block>
    </view>
    
    <view wx:if="{{logs.length === 0}}" class="empty-state">
      <text class="empty-text">暂无操作日志</text>
    </view>
  </scroll-view>
</view>
